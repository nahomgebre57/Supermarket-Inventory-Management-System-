<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="620.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerFormController">
    <children>
        <TableView fx:id="tblCustomer" layoutX="14.0" layoutY="320.0" onMouseReleased="#tblMouseClick" prefHeight="285.0" prefWidth="952.0" stylesheets="@../css/fullpackstyling.css">
            <columns>
                <TableColumn fx:id="colCustID" prefWidth="65.0" text="ID" />
                <TableColumn fx:id="colCustTitle" prefWidth="45.0" text="Title" />
                <TableColumn fx:id="colCustName" prefWidth="120.0" text="Customer Name" />
                <TableColumn fx:id="colCustPhone" prefWidth="110.0" text="Phone No" />
                <TableColumn fx:id="colCustAddress" prefWidth="120.0" text="Address" />
                <TableColumn fx:id="colCustEmail" prefWidth="130.0" text="Email" />
                <TableColumn fx:id="colCustCity" prefWidth="90.0" text="City" />
                <TableColumn fx:id="colCustProvince" prefWidth="100.0" text="Province" />
                <TableColumn fx:id="colCustReg" prefWidth="80.0" text="Reg" />
            </columns>
        </TableView>

        <Pane layoutX="0.0" layoutY="0.0" prefHeight="78.0" prefWidth="980.0" style="-fx-background-color: linear-gradient(to right top, #6c5ce7, #8554ed, #9f48f1, #b935f2, #d300f0);" />

        <JFXTextField fx:id="txtcustID" labelFloat="true" layoutX="30.0" layoutY="100.0" prefHeight="31.0" prefWidth="210.0" promptText="Customer ID" />
        <JFXTextField fx:id="txtcustAddress" labelFloat="true" layoutX="30.0" layoutY="150.0" prefHeight="31.0" prefWidth="210.0" promptText="Address" />
        <JFXTextField fx:id="txtEmail" labelFloat="true" layoutX="30.0" layoutY="200.0" prefHeight="31.0" prefWidth="210.0" promptText="Email" />
        <JFXTextField fx:id="txtPhoneNo" labelFloat="true" layoutX="30.0" layoutY="250.0" prefHeight="31.0" prefWidth="210.0" promptText="Phone No" />

        <JFXComboBox fx:id="txtcustTital" labelFloat="true" layoutX="270.0" layoutY="100.0" prefWidth="200.0" promptText="Title">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Mr" />
                    <String fx:value="Ms" />
                    <String fx:value="Miss" />
                </FXCollections>
            </items>
        </JFXComboBox>

        <JFXTextField fx:id="txtcustName" labelFloat="true" layoutX="500.0" layoutY="100.0" prefHeight="31.0" prefWidth="210.0" promptText="Customer Name" />
        <JFXTextField fx:id="txtRegDate" labelFloat="true" layoutX="270.0" layoutY="150.0" prefHeight="31.0" prefWidth="210.0" promptText="Register Date" />
        <JFXTextField fx:id="txtcity" labelFloat="true" layoutX="500.0" layoutY="150.0" prefHeight="31.0" prefWidth="210.0" promptText="City" />

        <JFXComboBox fx:id="txtprovince" labelFloat="true" layoutX="270.0" layoutY="200.0" prefHeight="31.0" prefWidth="210.0" promptText="Province">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Central Province" />
                    <String fx:value="Eastern Province" />
                    <String fx:value="Northern Province" />
                    <String fx:value="Southern Province" />
                    <String fx:value="Western Province" />
                    <String fx:value="North Western Province" />
                    <String fx:value="North Central Province" />
                    <String fx:value="Uva Province" />
                    <String fx:value="Sabaragamuwa Province" />
                </FXCollections>
            </items>
        </JFXComboBox>

        <JFXButton fx:id="btnSave" buttonType="RAISED" layoutX="270.0" layoutY="250.0" onAction="#CustomerAddOnAction" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #4b7bec;" text="ADD" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </JFXButton>

        <JFXButton fx:id="btnSearch" buttonType="RAISED" layoutX="740.0" layoutY="100.0" onAction="#searchCustomerOnAction" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #fa8231;" text="Search" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>

        <JFXButton fx:id="btnUpdate" buttonType="RAISED" layoutX="740.0" layoutY="160.0" onAction="#updateOnAction" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #0fb9b1;" text="Update" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>

        <JFXButton fx:id="btnDelete" buttonType="RAISED" layoutX="740.0" layoutY="220.0" onAction="#customerDeleteOnAction" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #485460;" text="Delete" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>


    </children>
</AnchorPane>