<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="787.0" prefWidth="936.0"
            style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.LoginFormController">

    <children>

        <!-- Main container -->
        <AnchorPane layoutX="23.0" layoutY="34.0" prefHeight="519.0" prefWidth="606.0"
                    style="-fx-background-color: transparent;"
                    AnchorPane.bottomAnchor="47.0" AnchorPane.leftAnchor="23.0"
                    AnchorPane.rightAnchor="23.0" AnchorPane.topAnchor="47.0">

            <!-- White Login Pane -->
            <AnchorPane layoutX="327.0" layoutY="32.0" prefHeight="599.0" prefWidth="551.0"
                        style="-fx-background-color: white; -fx-background-radius: 1em;"
                        AnchorPane.bottomAnchor="62.0" AnchorPane.leftAnchor="327.0"
                        AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="32.0">

                <children>

                    <Label layoutX="150.0" layoutY="116.0" text="Sign In To Continue">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>

                    <!-- Username Field -->
                    <TextField fx:id="txtUserName" layoutX="142.0" layoutY="202.0"
                               prefHeight="40.0" prefWidth="269.0"
                               promptText="User Name" text="admin" />

                    <!-- Password Field -->
                    <PasswordField fx:id="txtPassword" layoutX="139.0" layoutY="293.0"
                                   prefHeight="40.0" prefWidth="269.0"
                                   promptText="Password" text="admin123" />

                    <!-- Login Button -->
                    <Button fx:id="btnSignIn" layoutX="159.0" layoutY="406.0"
                            prefHeight="67.0" prefWidth="229.0"
                            onAction="#LoginOnAction"
                            text="Sign In"
                            style="-fx-background-color: linear-gradient(to right top, #6c5ce7, #8554ed, #9f48f1, #b935f2, #d300f0); -fx-background-radius: 30; -fx-text-fill: white;">
                        <font>
                            <Font name="System Bold" size="22.0" />
                        </font>
                    </Button>

                    <!-- Icons -->
                    <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="73.0" layoutY="210.0">
                        <image>
                            <Image url="@../resources/user.png" />
                        </image>
                    </ImageView>

                    <ImageView fitHeight="40.0" fitWidth="49.0" layoutX="73.0" layoutY="276.0">
                        <image>
                            <Image url="@../resources/password.png" />
                        </image>
                    </ImageView>

                    <!-- Header -->
                    <Label layoutX="140.0" layoutY="62.0" text="WELCOME BACK,">
                        <font>
                            <Font name="System Bold" size="30.0" />
                        </font>
                    </Label>

                    <ImageView fitHeight="82.0" fitWidth="71.0" layoutX="57.0" layoutY="50.0">
                        <image>
                            <Image url="@../resources/logo1.png" />
                        </image>
                    </ImageView>

                    <!-- Close Button -->
                    <Button fx:id="btnCLose" layoutX="488.0" layoutY="14.0"
                            prefHeight="44.0" prefWidth="40.0"
                            onAction="#btnCloaseOnAction"
                            style="-fx-background-radius: 30;">
                        <graphic>
                            <ImageView fitHeight="34.0" fitWidth="45.0">
                                <image>
                                    <Image url="@../resources/close.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>

                </children>

                <effect>
                    <DropShadow />
                </effect>

            </AnchorPane>

            <!-- Purple Left Panel -->
            <AnchorPane layoutX="14.0" layoutY="-26.0" prefHeight="714.0" prefWidth="334.0"
                        style="-fx-background-color: linear-gradient(to right top, #6c5ce7, #8554ed, #9f48f1, #b935f2, #d300f0); -fx-background-radius: 1em;"
                        AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="14.0"
                        AnchorPane.topAnchor="-26.0">

                <effect>
                    <DropShadow />
                </effect>

                <children>
                    <ImageView fitHeight="131.0" fitWidth="270.0" layoutX="45.0" layoutY="294.0">
                        <image>
                            <Image url="@../resources/logo2.png" />
                        </image>
                    </ImageView>
                </children>

            </AnchorPane>

        </AnchorPane>

    </children>

</AnchorPane>
