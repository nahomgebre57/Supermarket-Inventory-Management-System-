<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="620.0" prefWidth="980.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AddCashierFormController">
    <children>
        <!-- TableView for Cashiers -->
        <TableView fx:id="tblCashier" layoutX="14.0" layoutY="360.0"
                   onMousePressed="#tblCashierClick"
                   prefHeight="245.0" prefWidth="952.0"
                   stylesheets="@../css/fullpackstyling.css">
            <columns>
                <TableColumn fx:id="colCashId" prefWidth="120.0" text="Cashier ID" />
                <TableColumn fx:id="colCashName" prefWidth="160.0" text="Cashier Name" />
                <TableColumn fx:id="colCashAddress" prefWidth="160.0" text="Address" />
                <TableColumn fx:id="colCashBirthDay" prefWidth="120.0" text="Birth Day" />
                <TableColumn fx:id="colCashRole" prefWidth="80.0" text="Role" />
            </columns>
        </TableView>

        <!-- Cashier Info Fields - Better organized in columns -->
        <JFXTextField fx:id="txtCashierID" labelFloat="true"
                      layoutX="20.0" layoutY="100.0"
                      prefHeight="35.0" prefWidth="180.0"
                      promptText="Cashier ID" />
        <JFXTextField fx:id="txtCashierName" labelFloat="true"
                      layoutX="20.0" layoutY="150.0"
                      prefHeight="35.0" prefWidth="180.0"
                      promptText="Cashier Name" />
        <JFXTextField fx:id="txtCashierAddress" labelFloat="true"
                      layoutX="20.0" layoutY="200.0"
                      prefHeight="35.0" prefWidth="180.0"
                      promptText="Address" />

        <!-- Login & Password -->
        <JFXTextField fx:id="txtLogin" labelFloat="true"
                      layoutX="220.0" layoutY="100.0"
                      prefHeight="35.0" prefWidth="180.0"
                      promptText="Login" />
        <JFXPasswordField fx:id="txtPassword" labelFloat="true"
                          layoutX="220.0" layoutY="150.0"
                          prefHeight="35.0" prefWidth="180.0"
                          promptText="Password" />

        <!-- Standard DatePicker for Birth Day -->
        <StackPane layoutX="220.0" layoutY="200.0" prefHeight="35.0" prefWidth="180.0">
            <children>
                <DatePicker fx:id="txtCashierBirthDay" prefHeight="35.0" prefWidth="180.0" promptText="Birth Day" />
            </children>
        </StackPane>

        <!-- Role Selection ComboBox -->
        <JFXComboBox fx:id="cmbRole" layoutX="220.0" layoutY="250.0"
                     prefHeight="35.0" prefWidth="180.0" promptText="Select Role" />

        <!-- CRUD Buttons - Organized in two columns with consistent spacing -->
        <!-- Left column buttons -->
        <JFXButton buttonType="RAISED" layoutX="20.0" layoutY="250.0"
                   onAction="#addOnAction" prefHeight="40.0" prefWidth="180.0"
                   style="-fx-background-color: #4b7bec;" text="ADD" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>

        <!-- Photo Button -->
        <TilePane layoutX="20.0" layoutY="300.0" prefHeight="40.0" prefWidth="180.0"
                  style="-fx-background-color: #273c75; -fx-background-radius: 30;">
            <children>
                <JFXButton fx:id="btnPhoto" buttonType="RAISED"
                           onAction="#choosePhoto" prefHeight="40.0" prefWidth="180.0"
                           style="-fx-background-color: #eb4d4b;" styleClass="button1"
                           stylesheets="@../css/fullpackstyling.css" text="Photo" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </JFXButton>
            </children>
        </TilePane>

        <!-- Right column action buttons - aligned vertically -->
        <JFXButton buttonType="RAISED" layoutX="480.0" layoutY="100.0"
                   onAction="#searchOnAction" prefHeight="40.0" prefWidth="180.0"
                   style="-fx-background-color: #fa8231;" text="Search" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>

        <JFXButton buttonType="RAISED" layoutX="480.0" layoutY="150.0"
                   onAction="#cashierUpdateOnAction" prefHeight="40.0" prefWidth="180.0"
                   style="-fx-background-color: #0fb9b1;" text="Update" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>

        <JFXButton buttonType="RAISED" layoutX="480.0" layoutY="200.0"
                   onAction="#cashierDeleteOnAction" prefHeight="40.0" prefWidth="180.0"
                   style="-fx-background-color: #485460;" text="Delete" textFill="WHITE">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </JFXButton>

        <!-- Image Views -->
        <ImageView fitHeight="40.0" fitWidth="38.0" layoutX="882.0" layoutY="85.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../resources/Logo2.png" />
            </image>
        </ImageView>

        <ImageView fx:id="imageid" fitHeight="150.0" fitWidth="180.0"
                   layoutX="770.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Header Pane -->
        <Pane prefHeight="78.0" prefWidth="980.0"
              style="-fx-background-color: linear-gradient(to right top, #6c5ce7, #8554ed, #9f48f1, #b935f2, #d300f0);" />
    </children>
</AnchorPane>